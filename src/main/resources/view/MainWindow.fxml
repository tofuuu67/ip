<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="400.0"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="MainWindow">
    <children>
        <!-- ScrollPane takes all space above input area -->
        <ScrollPane fx:id="scrollPane"
                    hbarPolicy="NEVER"
                    vvalue="1.0"
                    AnchorPane.topAnchor="0.0"
                    AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0"
                    AnchorPane.bottomAnchor="41.0">
            <content>
                <VBox fx:id="dialogContainer" spacing="10"
                      prefWidth="388.0"/>
            </content>
        </ScrollPane>

        <!-- Input field, anchored left and bottom -->
        <TextField fx:id="userInput"
                   onAction="#handleUserInput"
                   prefHeight="41.0"
                   AnchorPane.leftAnchor="0.0"
                   AnchorPane.bottomAnchor="0.0"
                   AnchorPane.rightAnchor="76.0" />

        <!-- Send button, anchored right and bottom -->
        <Button fx:id="sendButton"
                mnemonicParsing="false"
                onAction="#handleUserInput"
                prefHeight="41.0"
                prefWidth="76.0"
                text="Send"
                AnchorPane.rightAnchor="0.0"
                AnchorPane.bottomAnchor="0.0"/>
    </children>
</AnchorPane>
